  "dependencies": {
    "@a1rth/css-normalize": "1.2.1",
    "clsx": "2.1.1"
  },
  "overrides": {
    "typescript-eslint": {
      "eslint": "9.30.1"
    },
    "@typescript-eslint/parser": {
      "eslint": "9.30.1"
